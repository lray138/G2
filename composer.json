{
    "name": "lray138/g2",
    "description": "A practical functional programming toolbox for PHP - featuring monads, immutable data structures, and safe file operations",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "functional-programming",
        "monads",
        "either",
        "maybe",
        "immutable",
        "file-operations",
        "regex",
        "http-client",
        "php"
    ],
    "homepage": "https://github.com/lray138/g2",
    "support": {
        "issues": "https://github.com/lray138/g2/issues",
        "source": "https://github.com/lray138/g2"
    },
    "autoload": {
        "psr-4": {
            "lray138\\G2\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "lray138",
            "email": "57813289+lray138@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "functional-php/fantasy-land": "^1",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "lint": "phpcs --standard=phpcs.xml", 
        "fix": "phpcbf --standard=phpcs.xml"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
